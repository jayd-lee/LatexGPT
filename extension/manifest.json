{
  "manifest_version": 3,
  "name": "LatexGPT",
  "description": "An extension to make latex easier with chatGPT",
  "version": "1.0",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "permissions": ["tabs"]
  },
  "content_scripts": [
    {
      "js": ["./content.js"], 
      "matches": ["*://google.com/*"],
      "run_at": "document_end"
    }
  ]
}
